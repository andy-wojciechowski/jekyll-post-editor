<%= form_tag('/submit', method: 'post') do %>
  <%= label_tag('Title:')%>
  <%= text_field_tag(:title) %>
  <%= label_tag('Author:') %>
  <%= text_field_tag(:author) %>
  <%= content_tag(:div, id: 'edit-container') do %>
    <%= text_area_tag(:markdownArea) %>
    <%= content_tag(:div, id: 'previewArea') do %>
      <%= @kramdown_html %>
    <% end %>
  <% end %>
  <%= submit_tag('Submit') %>
<% end %>
<%= button_tag('Get Preview', id: 'get-preview-button', class: 'btn btn-primary')%>
